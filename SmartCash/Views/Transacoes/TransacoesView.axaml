<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:i="https://github.com/projektanker/icons.avalonia"
             xmlns:vm="clr-namespace:SmartCash.ViewModels.Transacoes"
             xmlns:mvm="clr-namespace:SmartCash.ViewModels"
             xmlns:views="clr-namespace:SmartCash.Views"
             xmlns:tviews="clr-namespace:SmartCash.Views.Transacoes"
             xmlns:models="clr-namespace:SmartCash.EfCore.Models"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="800"
             x:DataType="vm:TransacoesViewModel"
             Background="{DynamicResource WaBackground}"
             x:Class="SmartCash.Views.Transacoes.TransacoesView">

	<Grid>
		<Grid IsVisible="{Binding ExibindoLista}" RowDefinitions="Auto, *">

			<Border Grid.Row="0" Classes="HeaderBox" CornerRadius="0"
                    x:CompileBindings="False"
                    Padding="{Binding $parent[TopLevel].InsetsManager.SafeAreaPadding, FallbackValue='0,40,0,0'}">

				<Border Classes="HeaderContent" Padding="10,12">
					<Grid ColumnDefinitions="Auto, *, Auto">

						<Button Grid.Column="0"
                                Command="{Binding $parent[views:MainView].((mvm:MainViewModel)DataContext).VoltarCommand}"
                                Classes="IconButton"
                                Margin="0,0,5,0">
							<i:Icon Value="fa-solid fa-arrow-left" Foreground="{DynamicResource WaHeaderIcon}" FontSize="24"/>
						</Button>

						<StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Spacing="12">
							<Border Classes="IconAvatarCard">
								<i:Icon Value="fa-solid fa-money-bill-transfer" Classes="IconAvatarGraphic"/>
							</Border>
							<TextBlock Text="Transações" Classes="HeaderTitle" VerticalAlignment="Center"/>
						</StackPanel>

						<StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Spacing="20">
							<Button Classes="IconButton">
								<i:Icon Value="fa-solid fa-ellipsis-vertical" Foreground="{DynamicResource WaHeaderIcon}" FontSize="24"/>

								<Button.Flyout>
									<MenuFlyout Placement="BottomEdgeAlignedRight">
										<MenuItem Header="Nova Transação" Command="{Binding AdicionarCommand}">
											<MenuItem.Icon>
												<i:Icon Value="fa-solid fa-plus" Classes="MenuIcon"/>
											</MenuItem.Icon>
										</MenuItem>
										<MenuItem Header="Atualizar" Command="{Binding CarregarDadosCommand}">
											<MenuItem.Icon>
												<i:Icon Value="fa-solid fa-rotate" Classes="MenuIcon"/>
											</MenuItem.Icon>
										</MenuItem>
									</MenuFlyout>
								</Button.Flyout>
							</Button>
						</StackPanel>
					</Grid>
				</Border>
			</Border>

			<ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
				<StackPanel Classes="MainContentArea">

					<Border Classes="FieldCard">
						<ComboBox HorizontalAlignment="Stretch"
                                  ItemsSource="{Binding MesesFiltro}"
                                  SelectedItem="{Binding MesSelecionado}"
                                  PlaceholderText="Selecionar Mês">
							<ComboBox.ItemTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding}" Classes="ComboBoxItemText"/>
								</DataTemplate>
							</ComboBox.ItemTemplate>
						</ComboBox>
					</Border>

					<Border Classes="ListContainerCard">
						<ListBox ItemsSource="{Binding Transacoes}"
                                 Background="Transparent"
                                 SelectionMode="Single"
                                 ScrollViewer.VerticalScrollBarVisibility="Hidden">

							<ListBox.ItemTemplate>
								<DataTemplate x:DataType="models:TransacaoModel">
									<Border Classes="ListItemBorder">

										<Border.ContextFlyout>
											<MenuFlyout>
												<MenuItem Header="Ver Itens"
                                                          Command="{Binding $parent[ListBox].((vm:TransacoesViewModel)DataContext).AbrirDetalhesCommand}"
                                                          CommandParameter="{Binding}">
													<MenuItem.Icon>
														<i:Icon Value="fa-solid fa-list-ul" Classes="MenuIcon"/>
													</MenuItem.Icon>
												</MenuItem>
											</MenuFlyout>
										</Border.ContextFlyout>

										<Grid ColumnDefinitions="Auto, *, Auto, Auto">

											<Border Grid.Column="0" Classes="IconAvatarCardWarning">
												<i:Icon Value="fa-solid fa-calendar-day" Classes="IconAvatarGraphicWarning"/>
											</Border>

											<StackPanel Grid.Column="1" Classes="ListItemTextContainer">
												<TextBlock Text="{Binding Data, StringFormat='{}{0:dd/MM/yyyy}'}" Classes="ListItemTitle"/>
												<TextBlock Text="{Binding Itens.Count, StringFormat='{}{0} itens registrados'}" Classes="ListItemSubtitle"/>
											</StackPanel>

											<TextBlock Grid.Column="2" Text="{Binding ValorTotal, StringFormat='{}{0:C}'}" Classes="ListItemValueDanger"/>

											<i:Icon Grid.Column="3" Value="fa-solid fa-chevron-right" Classes="ChevronRight"/>
										</Grid>
									</Border>
								</DataTemplate>
							</ListBox.ItemTemplate>
						</ListBox>
					</Border>

					<Rectangle Height="40" Fill="Transparent"/>
				</StackPanel>
			</ScrollViewer>
		</Grid>

		<ContentControl Content="{Binding ViewSubAtual}" IsVisible="{Binding !ExibindoLista}">
			<ContentControl.DataTemplates>
				<DataTemplate DataType="vm:TransacaoDetalhesViewModel">
					<tviews:TransacaoDetalhesView />
				</DataTemplate>

				<DataTemplate DataType="vm:AdicionarTransacaoViewModel">
					<tviews:AdicionarTransacaoView />
				</DataTemplate>
			</ContentControl.DataTemplates>
		</ContentControl>
	</Grid>
</UserControl>