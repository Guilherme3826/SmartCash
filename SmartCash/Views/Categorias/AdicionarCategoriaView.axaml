<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:i="https://github.com/projektanker/icons.avalonia"
             xmlns:vm="clr-namespace:SmartCash.ViewModels.Categorias"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="800"
             x:DataType="vm:AdicionarCategoriaViewModel"
             Background="{DynamicResource WaBackground}"
             x:Class="SmartCash.Views.Categorias.AdicionarCategoriaView">

	<Grid RowDefinitions="Auto, *">

		<Border Grid.Row="0" Classes="HeaderBox"
                x:CompileBindings="False"
                Padding="{Binding $parent[TopLevel].InsetsManager.SafeAreaPadding, FallbackValue='0,40,0,0'}">

			<Border Classes="HeaderContent">
				<Grid ColumnDefinitions="Auto, *, Auto">
					
					<Button Grid.Column="0" Command="{Binding CancelarCommand}" Classes="IconButton">
						<i:Icon Value="fa-solid fa-xmark" Foreground="White" FontSize="24"/>
					</Button>

					<TextBlock Grid.Column="1" Text="Nova Categoria" Classes="HeaderTitle"/>

					<Button Grid.Column="2" Command="{Binding SalvarCommand}" Classes="IconButton">
						<i:Icon Value="fa-solid fa-check" Foreground="White" FontSize="24"/>
					</Button>
					
				</Grid>
			</Border>
		</Border>

		<ScrollViewer Grid.Row="1">
			<StackPanel Classes="FormArea">

				<StackPanel Classes="FieldContainer">
					<TextBlock Text="Nome da Categoria" Classes="FieldLabel"/>
					
					<Border Classes="FieldCard">
						<TextBox Text="{Binding NovoNome, Mode=TwoWay}" 
                                 Classes="InputBase" 
                                 Watermark="Ex: Mercado, Viagens..."/>
					</Border>
				</StackPanel>

				<StackPanel Classes="FieldContainer">
					<TextBlock Text="Selecione um Ãcone" Classes="FieldLabel"/>
					
					<Border Classes="IconSelectorCard">
						<ListBox ItemsSource="{Binding IconesDisponiveis}"
                                 SelectedItem="{Binding IconeSelecionado, Mode=TwoWay}">

							<ListBox.ItemsPanel>
								<ItemsPanelTemplate>
									<WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
								</ItemsPanelTemplate>
							</ListBox.ItemsPanel>

							<ListBox.ItemTemplate>
								<DataTemplate x:DataType="x:String">
									<Border Classes="IconItemCard">
										<i:Icon Value="{Binding}" Classes="IconItemGraphic"/>
									</Border>
								</DataTemplate>
							</ListBox.ItemTemplate>
						</ListBox>
					</Border>
				</StackPanel>

			</StackPanel>
		</ScrollViewer>
	</Grid>
</UserControl>