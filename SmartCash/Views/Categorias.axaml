<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:i="https://github.com/projektanker/icons.avalonia"
             xmlns:vm="clr-namespace:SmartCash.ViewModels"
             xmlns:views="clr-namespace:SmartCash.Views"
             xmlns:models="clr-namespace:SmartCash.EfCore.Models"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="800"
             x:DataType="vm:CategoriasViewModel"
             x:Class="SmartCash.Views.Categorias">

	<Grid RowDefinitions="Auto, *">

		<Border Grid.Row="0" Background="#2196F3" CornerRadius="0,0,25,25"
                x:CompileBindings="False"
                Padding="{Binding $parent[TopLevel].InsetsManager.SafeAreaPadding, FallbackValue='0,40,0,0'}">

			<Border Padding="20,10,20,30">
				<Grid ColumnDefinitions="Auto, *, Auto">
					<Button Grid.Column="0"
                            Command="{Binding $parent[views:MainView].((vm:MainViewModel)DataContext).VoltarCommand}"
                            Background="Transparent"
                            BorderThickness="0">
						<i:Icon Value="fa-solid fa-arrow-left" Foreground="White" FontSize="22"/>
					</Button>

					<TextBlock Grid.Column="1" Text="Categorias"
                               Foreground="White" FontSize="18" FontWeight="SemiBold"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>

					<Rectangle Grid.Column="2" Width="40"/>
				</Grid>
			</Border>
		</Border>

		<Grid Grid.Row="1" RowDefinitions="Auto, *" Margin="20">
			<Border Grid.Row="0" Background="White" CornerRadius="15" BoxShadow="0 4 10 0 #20000000" Margin="0,0,0,20">
				<Border Padding="15">
					<StackPanel Spacing="10">
						<TextBlock Text="Nova Categoria" FontWeight="Bold" Foreground="#333333"/>
						<Grid ColumnDefinitions="*, Auto">
							<TextBox Grid.Column="0"
                                     Watermark="Ex: Alimentação"
                                     Margin="0,0,10,0"/>
							<Button Grid.Column="1"
                                    Background="#2196F3"
                                    Foreground="White"
                                    Padding="15,5">
								<i:Icon Value="fa-solid fa-check"/>
							</Button>
						</Grid>
					</StackPanel>
				</Border>
			</Border>

			<Border Grid.Row="1" Background="White" CornerRadius="15" BoxShadow="0 4 10 0 #20000000">
				<Border Padding="10">
					<DataGrid ItemsSource="{Binding Categorias}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              GridLinesVisibility="Horizontal"
                              VerticalAlignment="Stretch"
                              HorizontalAlignment="Stretch"
                              MinHeight="200"
                              BorderThickness="0">
						<DataGrid.Columns>

							<DataGridTemplateColumn Header="Ícone" Width="75">
								<DataGridTemplateColumn.CellTemplate>
									<DataTemplate x:DataType="models:CategoriaModel">
										<i:Icon Value="{Binding IconeApresentacao}"
                                                FontSize="18"
                                                Foreground="#2196F3"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"/>
									</DataTemplate>
								</DataGridTemplateColumn.CellTemplate>
							</DataGridTemplateColumn>

							<DataGridTextColumn Header="Nome"
                                                Binding="{Binding Nome}"
                                                Width="*"/>

						</DataGrid.Columns>
					</DataGrid>
				</Border>
			</Border>
		</Grid>
	</Grid>
</UserControl>